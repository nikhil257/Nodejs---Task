<%- include("partials/header")%> <%- include("partials/nav")%>

<div class="flex items-center justify-between flex-col text-white">
  <h1 class="text-5xl font-bold m-10">Update Account</h1>

  <div class="flex items-center justify-center">
    <form action="/user/update" method="post">
      <input
        class="block mt-8 w-full bg-transparent border-2 p-2 rounded-md border-slate-500 text-gray-400"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block mt-6 w-full bg-transparent border-2 p-2 rounded-md border-slate-500 text-gray-400"
        type="email"
        name="email"
        placeholder="email"
      />

      <div class="flex flex-col items-center">
        <button
          class="bg-yellow-500 text-black px-2 py-1 font-semibold rounded-md border-yellow-700 border-2 mt-6 cursor-pointer"
        >
          Update User Details
        </button>

        <a
          href="/user/profile"
          class="bg-cyan-200 text-black px-2 py-1 font-semibold rounded-md border-cyan-700 border-2 mt-3 cursor-pointer w-auto text-center"
        >
          <i class="ri-arrow-left-line"></i> Cancel</a
        >
        <a href="/user/delete-account" class="text-red-500 hover:text-red-600 mt-4"
          >Delete Account</a
        >
      </div>
    </form>
  </div>
  <%- include("partials/footer")%>
</div>
